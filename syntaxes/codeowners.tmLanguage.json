{
  "name": "codeowners",
  "patterns": [
    {
      "include": "#comment"
    },
    {
      "include": "#pattern"
    },
    {
      "include": "#owner"
    }
  ],
  "repository": {
    "comment": {
      "patterns": [
        {
          "begin": "^\\s*#",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.codeowners"
            }
          },
          "end": "$",
          "name": "comment.line.codeowners"
        }
      ]
    },
    "pattern": {
      "match": "^\\s*(\\S+)",
      "name": "variable.other.codeowners"
    },
    "owner": {
      "match": "\\S*@\\S+",
      "name": "storage.type.function.codeowners"
    }
 },
  "scopeName": "text.codeowners"
}